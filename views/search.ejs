<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">
        <h1 class=" text-info mb-5">Employees Database</h1>

        <form method="GET" action="/search" class="mt-3">
            <div class="row col-md-12">
                <select id="filter" name="filter" class="form-control col-md-2 mr-2" data-style="btn-primary">
                    <option value="all">All</option>
                    <option value="less_than">Less than</option>
                    <option value="greater_than">Greater than</option>
                </select>
                <input type="search" id="salary" name="salary" placeholder="salary" class="form-control col-md-2 mr-5">
                <input type="submit" class="btn-primary btn mr-3">
                <input type="button" class="btn-primary btn" onclick="location.href='/';" value="Add Employee Record">
            </div>
        </form>
        <h5 class="text-danger"><%= (error) ? error : '' %> </h5>
    </div>

    <div class="container mt-5">
        <table class="table table-bordered">
            <thead class="thead-light ">
                <tr>
                    <th>EmpId</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Salary</th>
                </tr>
            </thead>

            <% if(data) { data.forEach(function(report) { %>
            <tr>
                <td><%= report.id %></td>
                <td><%= report.name %></td>
                <td><%= report.email %></td>
                <td><%= report.salary %></td>
            </tr>
            <% })} %>
        </table>
    </div>
</body>